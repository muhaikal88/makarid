  },
  "feature_guidelines": {
    "bilingual": {
      "strategy": "Use a context provider for language state (ID/EN).",
      "ui_element": "Dropdown in Top Header (Flag icon + Language Code).",
      "text_handling": "Ensure all text containers allow for 20-30% expansion (Indonesian is often longer than English)."
    },
    "charts": {
      "library": "Recharts (via Shadcn)",
      "palette": ["#2E4DA7", "#E31E24", "#10b981", "#f59e0b", "#6366f1"]
    }
  },
  "instructions_to_main_agent": {
    "setup": [
      "Install 'lucide-react' for icons.",
      "Install 'recharts' for dashboard charts.",
      "Install 'clsx' and 'tailwind-merge' for class handling (standard in shadcn).",
      "Use 'sonner' for toast notifications."
    ],
    "file_structure": [
      "Create /components/layout/Sidebar.jsx",
      "Create /components/layout/Header.jsx",
      "Create /pages/Dashboard.jsx",
      "Create /pages/Login.jsx",
      "Create /pages/Companies.jsx"
    ],
    "theming": "Update tailwind.config.js to use the HSL values provided in 'colors.tailwind_mapping'. This is CRITICAL for the brand look."
  },
  "universal_guidelines": {
    "do_not": [
      "Do NOT use gradients for the main background. Keep it clean.",
      "Do NOT use generic 'Inter' font if possible, use 'Manrope'.",
      "Do NOT center text in tables. Left align text, right align numbers."
    ],
    "must": [
      "MUST include 'data-testid' on all interactive elements.",
      "MUST use the specific Brand Blue (#2E4DA7) for primary actions.",
      "MUST provide a distinct visual cue for the active sidebar item."
    ]
  }
}